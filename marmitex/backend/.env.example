# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/marmitex

# Configurações JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_em_producao

# Configurações do Servidor
PORT=5000
NODE_ENV=development

# Configurações WhatsApp (WPPConnect)
WPP_SESSION_PATH=./sessions
WPP_WEBHOOK_URL=http://localhost:5000/api/webhooks/whatsapp
WPP_AUTO_CLOSE=false
WPP_DISABLE_WEB=false

# Configurações Mercado Pago (Opcional - para pagamentos)
MERCADO_PAGO_ACCESS_TOKEN=seu_access_token_do_mercado_pago
MERCADO_PAGO_PUBLIC_KEY=sua_public_key_do_mercado_pago
MERCADO_PAGO_WEBHOOK_URL=http://localhost:5000/api/webhooks/mercadopago

# Configurações de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Configurações de Email (Opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# Configurações de CORS
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:3000

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log